<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First row: EditText for the name of the profile -->
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name" />

    <!-- Second row: Hour start and hour end in 24 hours format -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TimePicker
            android:id="@+id/timePickerStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:timePickerMode="spinner" />

        <TimePicker
            android:id="@+id/timePickerEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:timePickerMode="spinner" />
    </LinearLayout>

    <!-- Third row: Selector showing in circles the seven days of the week in abbreviated format -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/toggleButtonMon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textOn="M"
            android:textOff="M"
            android:background="@drawable/circle_toggle" />

        <ToggleButton
            android:id="@+id/toggleButtonTue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textOn="T"
            android:textOff="T"
            android:background="@drawable/circle_toggle" />

        <ToggleButton
            android:id="@+id/toggleButtonWed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textOn="W"
            android:textOff="W"
            android:background="@drawable/circle_toggle" />

        <ToggleButton
            android:id="@+id/toggleButtonThu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textOn="Th"
            android:textOff="Th"
            android:background="@drawable/circle_toggle" />

        <ToggleButton
            android:id="@+id/toggleButtonFri"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textOn="F"
            android:textOff="F"
            android:background="@drawable/circle_toggle" />

        <ToggleButton
            android:id="@+id/toggleButtonSat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textOn="S"
            android:textOff="S"
            android:background="@drawable/circle_toggle" />

        <ToggleButton
            android:id="@+id/toggleButtonSun"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:textOn="Su"
            android:textOff="Su"
            android:background="@drawable/circle_toggle" />

        <!-- Add similar ToggleButtons for Tue, Wed, Thu, Fri, Sat, Sun -->
    </LinearLayout>

